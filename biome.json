{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "ignore": ["**/dist/**", "**/node_modules/**"],
    "indentWidth": 2,
    "indentStyle": "space",
    "lineWidth": 110
  },
  "javascript": {
    "formatter": {
      "enabled": true,
      "quoteStyle": "single",
      "trailingCommas": "all",
      "semicolons": "always",
      "arrowParentheses": "always"
    }
  },
  "json": {
    "parser": { "allowComments": true },
    "formatter": {
      "enabled": true,
      "indentStyle": "space",
      "indentWidth": 2,
      "lineWidth": 110
    }
  },
  "linter": {
    "enabled": true,
    "ignore": ["**/dist/**", "**/node_modules/**"],
    "rules": {
      "all": true,
      "style": {
        "all": true,
        "noImplicitBoolean": "off",
        "useBlockStatements": "off",
        "noDefaultExport": "off",
        "useExplicitLengthCheck": "off"
      },
      "complexity": {
        "noForEach": "off"
      },
      "suspicious": {
        "noReactSpecificProps": "off"
      },
      "correctness": {
        "useImportExtensions": "off",
        "useExhaustiveDependencies": "off"
      },
      "a11y": {
        "noSvgWithoutTitle": "off"
      }
    }
  }
}
